SmallCar[]list3=CarRentalCompany.getAllCar(num);
for( int i=0;i<list3.length:i++)
if(list3[i]!=null) {
System.out.println(list3[i].toString());
System.out.println("--------------------------------");
}//if
break;
case 4:
Car[] list4 =CarRentalCompany.getAllAvailable();
System.out.println("--------------------------------");
